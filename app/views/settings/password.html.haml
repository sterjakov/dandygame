#signup.offset
  .content
    .offset

      %h1
        Настройки

      = render partial:'block/settings_menu'


      .offsetter

        .px280

          = form_for @current_user, method: :patch, url: { controller: "settings", action: 'password_process' },  html: { style: 'width: 360px: margin: 0 auto;' } do |f|

            .offsetter-height-half

              = render partial: 'block/form_errors', locals: { model: @current_user }

            .row
              = f.label :password,  'Текущий пароль', class: 'required'
              = f.password_field :password

            .row
              = f.label :new_password, class: 'required'
              = f.password_field :new_password

            .row
              = f.label :new_password_confirmation, 'Новый пароль еще раз', class: 'required'
              = f.password_field :new_password_confirmation

            = render partial: 'block/form_captcha', locals: { f: f }

            .row.actions
              = f.submit '', class: 'hidden'
              %a.button.big.orange.all-width{ onclick: 'document.getElementsByTagName("form")[0].submit();' }
                Сохранить!

            %p.grey.centered Внимание! Поля отмеченные * обязательны для заполенния!








