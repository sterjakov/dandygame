= link_to admin_day_attachments_path, :class => 'btn btn-default pull-right margin-l-5' do
  %span.glyphicon.glyphicon-list-alt
  Назад

= link_to edit_admin_day_attachment_path(@day_attachment), :class => 'btn btn-primary pull-right margin-l-5' do
  %span.glyphicon.glyphicon-pencil
  Редактировать

= link_to [:admin, @day_attachment], data: { confirm: 'Вы уверены?' }, method: :delete, :class => 'btn btn-danger pull-right margin-l-5' do
  %span.glyphicon.glyphicon-trash
  Удалить

%h2.no-margin
  Просмотр
  = t 'activerecord.models.day_attachment.sozdanie'

%hr

%dl.dl-horizontal
  %dt= t('activerecord.attributes.day_id') + ":"
  %dd= @day_attachment.day_id
  %dt= t('activerecord.attributes.attachment') + ":"
  %dd= @day_attachment.attachment
