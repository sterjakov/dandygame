= link_to admin_comments_path, :class => 'btn btn-default pull-right margin-l-5' do
  %span.glyphicon.glyphicon-list-alt
  Назад

= link_to edit_admin_comment_path(@comment), :class => 'btn btn-primary pull-right margin-l-5' do
  %span.glyphicon.glyphicon-pencil
  Редактировать

= link_to [:admin, @comment], data: { confirm: 'Вы уверены?' }, method: :delete, :class => 'btn btn-danger pull-right margin-l-5' do
  %span.glyphicon.glyphicon-trash
  Удалить

%h2.no-margin
  Просмотр
  = t 'activerecord.models.comment.sozdanie'

%hr

%dl.dl-horizontal
  %dt= t('activerecord.attributes.user_id') + ":"
  %dd= @comment.user_id
  %dt= t('activerecord.attributes.description') + ":"
  %dd= @comment.description
  %dt= t('activerecord.attributes.bad') + ":"
  %dd= @comment.bad
  %dt= t('activerecord.attributes.good') + ":"
  %dd= @comment.good
  %dt= t('activerecord.attributes.status') + ":"
  %dd= @comment.status
