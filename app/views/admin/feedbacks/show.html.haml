= link_to admin_feedbacks_path, :class => 'btn btn-default pull-right margin-l-5' do
  %span.glyphicon.glyphicon-list-alt
  Назад

= link_to edit_admin_feedback_path(@feedback), :class => 'btn btn-primary pull-right margin-l-5' do
  %span.glyphicon.glyphicon-pencil
  Редактировать

= link_to [:admin, @feedback], data: { confirm: 'Вы уверены?' }, method: :delete, :class => 'btn btn-danger pull-right margin-l-5' do
  %span.glyphicon.glyphicon-trash
  Удалить

%h2.no-margin
  Просмотр
  = t 'activerecord.models.feedback.sozdanie'

%hr

%dl.dl-horizontal
  %dt= t('activerecord.attributes.user_id') + ":"
  %dd= @feedback.user_id
  %dt= t('activerecord.attributes.training_id') + ":"
  %dd= @feedback.training_id
  %dt= t('activerecord.attributes.description') + ":"
  %dd= @feedback.description
  %dt= t('activerecord.attributes.bad') + ":"
  %dd= @feedback.bad
  %dt= t('activerecord.attributes.good') + ":"
  %dd= @feedback.good
  %dt= t('activerecord.attributes.status') + ":"
  %dd= @feedback.status
