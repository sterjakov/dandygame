= link_to new_admin_feedback_path, :class => 'btn btn-primary pull-right' do
  %span.glyphicon.glyphicon-plus
  Создать
  = t 'activerecord.models.feedback.sozdat'

%h2.no-margin
  Каталог
  = t 'activerecord.models.feedback.catalog'

%hr

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th
          = t 'activerecord.attributes.user_id'
        %th
          = t 'activerecord.attributes.training_id'
        %th
          = t 'activerecord.attributes.description'
        %th
          = t 'activerecord.attributes.bad'
        %th
          = t 'activerecord.attributes.good'
        %th
          = t 'activerecord.attributes.status'
        %th.actions

    %tbody
      - @feedbacks.each do |feedback|
        %tr
          
          %td= link_to feedback.user_id, [:admin,feedback]
          
          
          %td= feedback.training_id
          
          
          %td= feedback.description
          
          
          %td= feedback.bad
          
          
          %td= feedback.good
          
          
          %td= feedback.status
          
          %td
            = link_to edit_admin_feedback_path(feedback), class: 'btn btn-xs btn-primary' do
              %span.glyphicon.glyphicon-pencil
              Редактировать

            = link_to [:admin,feedback], data: { confirm: 'Вы уверены?' }, method: :delete,  class: 'btn btn-default btn-xs btn-danger' do
              %span.glyphicon.glyphicon-trash
              Удалить

  = will_paginate @feedbacks, renderer: BootstrapPagination::Rails, class: 'no-margin'