= link_to admin_categories_path, :class => 'btn btn-default pull-right margin-l-5' do
  %span.glyphicon.glyphicon-list-alt
  Назад

= link_to edit_admin_category_path(@category), :class => 'btn btn-primary pull-right margin-l-5' do
  %span.glyphicon.glyphicon-pencil
  Редактировать

= link_to [:admin,@category], data: { confirm: 'Вы уверены?' }, method: :delete, :class => 'btn btn-danger pull-right margin-l-5' do
  %span.glyphicon.glyphicon-trash
  Удалить

%h2.no-margin
  Просмотр
  = t 'activerecord.models.category.sozdanie'

%hr

%dl.dl-horizontal
  %dt= t('activerecord.attributes.name') + ":"
  %dd= @category.name
  %dt= t('activerecord.attributes.alt_name') + ":"
  %dd= @category.alt_name
