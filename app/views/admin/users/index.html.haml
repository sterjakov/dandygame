= link_to new_admin_user_path, :class => 'btn btn-primary pull-right' do
  %span.glyphicon.glyphicon-plus
  Создать
  = t 'activerecord.models.user.sozdat'

%h2.no-margin
  Каталог
  = t 'activerecord.models.user.catalog'

%hr

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th
          = t 'activerecord.attributes.email'
        %th
          = t 'activerecord.attributes.nickname'
        %th
          = t 'activerecord.attributes.money'
        %th
          = t 'activerecord.attributes.role'
        %th
          = t 'activerecord.attributes.confirm'

        %th.actions

    %tbody
      - @users.each do |user|
        %tr
          
          %td= link_to user.email, [:admin, user]
          
          
          %td= user.nickname
          

          %td= user.money
          

          %td= user.role_is?


          %td= user.human_confirm

          
          %td
            = link_to edit_admin_user_path(user), class: 'btn btn-xs btn-primary' do
              %span.glyphicon.glyphicon-pencil
              Редактировать

            = link_to [:admin,user], data: { confirm: 'Вы уверены?' }, method: :delete,  class: 'btn btn-default btn-xs btn-danger' do
              %span.glyphicon.glyphicon-trash
              Удалить

  = will_paginate @users, renderer: BootstrapPagination::Rails, class: 'no-margin'